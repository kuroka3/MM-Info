// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Song {
  id        Int       @id @default(autoincrement())
  title     String
  krtitle   String?
  artist    String
  krartist  String?
  slug      String?   @unique
  videoId   String?
  summary   String?
  lyrics    Json?
  spotify   String?
  youtube   String?
  thumbnail String?
  part      String[]
  setlists  SetlistSong[]
  anotherName String[] @default([])
  eventVariations EventSongVariation[]
}

model Venue {
  id       Int       @id @default(autoincrement())
  name     String
  name_en  String?
  concerts Concert[]
}

model Series {
  id     Int     @id @default(autoincrement())
  name   String
  slug   String   @unique
  note   String?
  events Event[]

  @@map("series")
}

model Event {
  id       Int      @id @default(autoincrement())
  name     String
  year     Int?
  slug     String   @unique
  seriesId Int?     @map("seriesid")
  series   Series?  @relation(fields: [seriesId], references: [id])
  concerts Concert[]
  songVariations EventSongVariation[]

  @@map("event")
}

model Concert {
  id           Int       @id @default(autoincrement())
  title        String
  date         DateTime  @db.Date
  day          String
  block        String
  hidden       Boolean?  @default(false)
  venueId      Int?
  setlistId    Int?
  eventId      Int?
  showTime     DateTime? @db.Time(6)
  doorTime     DateTime? @db.Time(6)
  vipTime      DateTime? @db.Time(6)
  timeZone     String?
  timeOffset   String?
  showTimeUTC  DateTime? @db.Timestamptz(6)
  doorTimeUTC  DateTime? @db.Timestamptz(6)
  vipTimeUTC   DateTime? @db.Timestamptz(6)

  venue   Venue?   @relation(fields: [venueId], references: [id])
  setlist Setlist? @relation(fields: [setlistId], references: [id])
  event   Event?   @relation(fields: [eventId], references: [id])

  @@index([setlistId])
  @@index([eventId])
  @@index([setlistId, eventId])
}

model Setlist {
  id       Int       @id @default(autoincrement())
  name     String
  playlist String?
  spotifyPlaylist String?
  songs    SetlistSong[]
  concerts Concert[]
}

model SetlistSong {
  setlist     Setlist @relation(fields: [setlistId], references: [id])
  setlistId   Int
  song        Song?   @relation(fields: [songId], references: [id])
  songId      Int?
  order       Int
  type        String  @default("song")
  text        String?

  @@id([setlistId, order])
}

model EventSongVariation {
  eventId           Int
  songSlug          String
  isHigawari        Boolean @default(false)
  isLocationgawari  Boolean @default(false)

  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)
  song  Song  @relation(fields: [songSlug], references: [slug], onDelete: Cascade)

  @@id([eventId, songSlug])
  @@index([eventId], name: "idx_event_song_variation_eventid")
  @@index([songSlug], name: "idx_event_song_variation_songslug")
}
